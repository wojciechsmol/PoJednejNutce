<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="Logo">
        <item name="android:contentDescription">App Logo</item>
        <item name="android:layout_marginTop">@dimen/logo_margin_top</item>
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <style name="Logo.Smaller">
        <item name="android:layout_width">@dimen/logo_smaller_width</item>
        <item name="android:layout_height">@dimen/logo_smaller_height</item>
    </style>

    <style name="ButtonWrapper">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExitIcon">
        <item name="android:contentDescription">Exit Icon</item>
        <item name="android:layout_marginRight">@dimen/exit_icon_margin</item>
        <item name="android:layout_marginTop">@dimen/exit_icon_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_close_white_24dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginTop">@dimen/text_question_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_question_margin_bottom</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle.Question">
        <item name="android:text">@string/question</item>
    </style>

    <style name="SeekBar">
        <item name="android:layout_width">@dimen/seekbar_width</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">0.3</item>
    </style>

    <style name="GridButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
    </style>

    <style name="ButtonWrapper.Play">
        <item name="android:layout_width">@dimen/wrapper_width</item>
        <item name="android:layout_height">@dimen/wrapper_height</item>
    </style>

    <style name="Button.Answer">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/padding_text_score</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_score_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextScoreNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_score_nr_size</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
